    }

    @Override
    protected void onPause() {
        super.onPause();
        Log.d("Lifecycle", "onPause: Activity partially obscured");
    }

    @Override
    protected void onStop() {
        super.onStop();
        Log.d("Lifecycle", "onStop: Activity not visible");
    }

